<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Terminal header -->
    <TextView
        android:id="@+id/titleAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="18dp"
        android:text=":~$"
        android:textSize="18sp"
        android:textColor="#00FF00"
        android:fontFamily="@font/american_typewriter_rus_by_me"
        android:typeface="monospace"/>


    <!-- Terminal output -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/titleAI"
        android:layout_above="@id/inputContainer"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:background="#000000">

        <LinearLayout
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:divider="@drawable/divider_terminal"
            android:showDividers="middle"/>
    </androidx.core.widget.NestedScrollView>

    <!-- Command line -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#000000"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user:~$ "
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:fontFamily="@font/american_typewriter_rus_by_me"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/editMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="enter command..."
            android:background="@android:color/transparent"
            android:paddingVertical="12dp"
            android:textColor="#00FF00"
            android:textColorHint="#44AA44"
            android:inputType="textCapSentences|textMultiLine"
            android:imeOptions="actionDone"
            android:maxLines="3"
            android:textSize="16sp"
            android:fontFamily="@font/american_typewriter_rus_by_me"
            android:typeface="monospace"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_terminal_enter"
            android:background="@android:color/transparent"
            android:contentDescription="Execute"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="#00FF00"/>
    </LinearLayout>
</RelativeLayout>
