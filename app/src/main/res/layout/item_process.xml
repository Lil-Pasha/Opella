<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Иконка процесса -->
        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp" />

        <!-- Текстовая информация -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameTextView"
                android:text="App Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/american_typewriter_rus_by_me"
                android:textColor="#00FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/cpuTextView"
                android:text="CPU: 0%"
                android:fontFamily="@font/american_typewriter_rus_by_me"
                android:textColor="#00FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/memTextView"
                android:text="RAM: 0 MB"
                android:fontFamily="@font/american_typewriter_rus_by_me"
                android:textColor="#00FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/storageTextView"
                android:text="Storage: 0 MB"
                android:fontFamily="@font/american_typewriter_rus_by_me"
                android:textColor="#00FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Дополнительные поля -->
            <TextView
                android:id="@+id/pidTextView"
                android:text="PID: 0000"
                android:fontFamily="@font/american_typewriter_rus_by_me"
                android:textColor="#00FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/userTextView"
                android:text="User: system"
                android:fontFamily="@font/american_typewriter_rus_by_me"
                android:textColor="#00FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/romTextView"
                android:text="ROM: 0 MB"
                android:fontFamily="@font/american_typewriter_rus_by_me"
                android:textColor="#00FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
