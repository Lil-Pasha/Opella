<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <!-- Терминальный заголовок -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="SYNAPS_and_OPELLA TERMINAL v1.0"
        android:textColor="#00FF00"
        android:textSize="18sp"
        android:typeface="monospace"
        android:fontFamily="@font/american_typewriter_rus_by_me"
        android:letterSpacing="0.05" />

    <!-- Информация о системе -->
    <TextView
        android:id="@+id/systemInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="24dp"
        android:text="System initialized\nReady for user input"
        android:textColor="#44AA44"
        android:textSize="14sp"
        android:typeface="monospace"
        android:fontFamily="@font/american_typewriter_rus_by_me"
        android:lineSpacingExtra="4dp"
        android:gravity="center" />

    <!-- Псевдо-терминальный вывод -->
    <TextView
        android:id="@+id/terminalOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/systemInfo"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Initializing system... OK\nLoading modules... OK\nSecurity protocols... ACTIVE"
        android:textColor="#00FF00"
        android:textSize="12sp"
        android:typeface="monospace"
        android:fontFamily="@font/american_typewriter_rus_by_me"
        android:lineSpacingExtra="4dp" />

    <!-- Кнопка AI -->
    <FrameLayout
        android:id="@+id/btnWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/terminalOutput"
        android:layout_centerHorizontal="true"
        android:padding="2dp">

    </FrameLayout>

    <!-- Кнопка Bluetooth -->
    <!-- Блок кнопок -->
    <LinearLayout
        android:id="@+id/btnBluetoothWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnWrapper"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="2dp">

        <Button
            android:id="@+id/btnLink"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_terminal_selector"
            android:text="> EDITOR"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:typeface="monospace"
            android:fontFamily="@font/american_typewriter_rus_by_me"
            android:letterSpacing="0.05"
            android:gravity="center"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnTaskManager"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_terminal_selector"
            android:text="> TASK MANAGER"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:typeface="monospace"
            android:fontFamily="@font/american_typewriter_rus_by_me"
            android:letterSpacing="0.05"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Новая кнопка Чат -->


    <!-- Командная строка внизу -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#000000">

        <TextView
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="settings"
            android:textColor="#44AA44"
            android:textSize="14sp"
            android:typeface="monospace"
            android:fontFamily="@font/american_typewriter_rus_by_me"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

    </LinearLayout>
</RelativeLayout>
